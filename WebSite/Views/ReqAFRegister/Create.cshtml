@model IT_ASSET.Models.tbl_req_af

@{
    ViewBag.Title = "Create";
}

<h2>กรอกข้อมูลการขอสิทธิและยกเลิกสิทธิ ALFRESCO</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group">
        @Html.LabelFor(model => model.MEM_NO, "รหัสพนักงานผู้ขอสิทธิ", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.MEM_NO, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MEM_NO, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.AF_DATE, "วันที่แจ้ง", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.AF_DATE, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
            @Html.ValidationMessageFor(model => model.AF_DATE, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ALLOW_STATUS, "สิทธิการใช้งาน", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.ALLOW_STATUS, ViewBag.ALLOW_DESC as SelectList, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ALLOW_STATUS, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ID_APPLICANT, "ผู้ขอสิทธิ", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.ID_APPLICANT, ViewBag.APPLICANT_DESC as SelectList, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ID_APPLICANT, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.AF_SITE, "Site", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.AF_SITE, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.AF_SITE, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.AF_FOLDER, "Folder", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.AF_FOLDER, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.AF_FOLDER, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.AF_STATUS, "สถานะสิทธิ", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.AF_STATUS, ViewBag.AF_STATUS_NAME as SelectList, new { @class = "form-control" })

            @Html.ValidationMessageFor(model => model.AF_STATUS, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.AF_NOTE, "หมายเหตุ", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.AF_NOTE, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.AF_NOTE, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.AF_REQUESTER, "รหัสพนักงานผู้แจ้ง", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.AF_REQUESTER, new { htmlAttributes = new { @class = "form-control", @Value = Session["USER_NO"].ToString(), @readonly = "true" } })
            @Html.ValidationMessageFor(model => model.AF_REQUESTER, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.REQ_STATUS, "สถานะของงาน", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.REQ_STATUS, new { htmlAttributes = new { @class = "form-control", @Value = "01", @readonly = "true" } })
            @Html.ValidationMessageFor(model => model.REQ_STATUS, "หมายเหตุ 01 = REGISTER", new { @class = "text-danger" })
        </div>
    </div>





    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="เปิดงาน" class="btn btn-success" />
        </div>
    </div>
</div>
}

<div>
    <input type="button" class="btn btn-primary" value="กลับไปหน้ารายการ" onclick="location.href='@Url.Action("Index", "ReqAFRegister")'" />
</div>
