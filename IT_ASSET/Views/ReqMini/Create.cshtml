@model IT_ASSET.Models.tbl_req_mini

@{
    ViewBag.Title = "Create";
}

    <h3 style="text-align:center;">กรอกข้อมูลการขอและยกเลิกสิทธิการใช้ในเครื่อง PDJMINI02 </h3>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.USER_NO, "รหัสพนักงานผู้ขอสิทธิ", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-8">
            @Html.EditorFor(model => model.USER_NO, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.USER_NO, "", new { @class = "text-danger" })

        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MINI_DATE, "วันที่แจ้ง", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-8">
            @Html.EditorFor(model => model.MINI_DATE, new { htmlAttributes = new { @class = "form-control", @Value = @DateTime.Now, @readonly = true } })
            @Html.ValidationMessageFor(model => model.MINI_DATE, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ALLOW_STATUS, "สิทธิการใช้งาน", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-8">
            @Html.DropDownListFor(model => model.ALLOW_STATUS, ViewBag.ALLOW_DESC as SelectList, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ALLOW_STATUS, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MINI_SAMPLE, "Sample$ on 'Pdjmini02' (S:)", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-8">
            @Html.RadioButtonFor(model => model.MINI_SAMPLE, "Full")
            Full  &nbsp; &nbsp; &nbsp; &nbsp;
            @Html.RadioButtonFor(model => model.MINI_SAMPLE, "Change")
            Change  &nbsp; &nbsp; &nbsp; &nbsp;
            @Html.RadioButtonFor(model => model.MINI_SAMPLE, "Read")
            Read
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MINI_PROTO, "Proto$ on 'Pdjmini02' (T:)", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-8">
            @Html.RadioButtonFor(model => model.MINI_PROTO, "Full")
            Full  &nbsp; &nbsp; &nbsp; &nbsp;
            @Html.RadioButtonFor(model => model.MINI_PROTO, "Change")
            Change  &nbsp; &nbsp; &nbsp; &nbsp;
            @Html.RadioButtonFor(model => model.MINI_PROTO, "Read")
            Read
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MINI_INFORM, "PrototypeInfrom$ on 'Pdjmini02'", htmlAttributes: new { @class = "control-label col-md-2 " })
        <div class="col-md-8">
            @Html.RadioButtonFor(model => model.MINI_INFORM, "Full")
            Full  &nbsp; &nbsp; &nbsp; &nbsp;
            @Html.RadioButtonFor(model => model.MINI_INFORM, "Change")
            Change  &nbsp; &nbsp; &nbsp; &nbsp;
            @Html.RadioButtonFor(model => model.MINI_INFORM, "Read")
            Read
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MINI_CHM, "CHM$ on 'Pdjmini02'", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-8">
            @Html.RadioButtonFor(model => model.MINI_CHM, "Full")
            Full   &nbsp; &nbsp; &nbsp; &nbsp;
            @Html.RadioButtonFor(model => model.MINI_CHM, "Change")
            Change  &nbsp; &nbsp; &nbsp; &nbsp;
            @Html.RadioButtonFor(model => model.MINI_CHM, "Read")
            Read
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MINI_REQUESTER,"รหัสพนักงานผู้แจ้ง", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-8">
            @Html.EditorFor(model => model.MINI_REQUESTER, new { htmlAttributes = new { @class = "form-control" , @Value = Session["USER_NO"].ToString(), @readonly = "true"} })
            @Html.ValidationMessageFor(model => model.MINI_REQUESTER, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.REQ_STATUS,"สถานะของงาน", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-8">
            @Html.DropDownListFor(model => model.REQ_STATUS, new List<SelectListItem>
       {  new SelectListItem{ Text="ลงทะเบียน",Value="01"},
     }, new { @class = "form-control", @readonly = "true" })
            @Html.ValidationMessageFor(model => model.REQ_STATUS, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="เปิดงาน" class="btn btn-success" />
        </div>
    </div>
</div>
}

<div>
    <input type="button" class="btn btn-primary" value="กลับไปหน้ารายการ" onclick="location.href='@Url.Action("Index", "ReqMini")'" />
</div>