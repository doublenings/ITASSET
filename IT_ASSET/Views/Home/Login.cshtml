@model IT_ASSET.Models.tbl_user

@{
    Layout = "~/Views/Shared/_Login.cshtml";
}
    <div class="login-box">
     
        <div class="login-box-body">
            <div class="login-logo">
                <img src="~/Content/img/Logo.jpg" />
                <b>ITASSET</b>
            </div>
            <p class="login-box-msg">LOGIN FOR START SESSION</p>
            @using (Html.BeginForm("Login", "Home", FormMethod.Post))
            {
                <fieldset>
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    @if (@ViewBag.Message != null)
            {
                        <div style="color:red;font-size:18px;">
                            @ViewBag.Message
                        </div>
            }
                    <form action="../../index2.html" method="post">
                        <div class="form-group has-feedback">

                            @Html.TextBoxFor(b => b.USER_NO, new { placeholder = "Username", @class = "form-control", @Value = ViewBag.user_no })
                            @Html.ValidationMessageFor(b => b.USER_NO, "", new { @class = "error" })
                            <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                        </div>
                        <div class="form-group has-feedback">
                            @Html.PasswordFor(b => b.USER_PASSWORD, new { placeholder = "Password", @class = "form-control", @Value = ViewBag.user_password })
                            @Html.ValidationMessageFor(b => b.USER_PASSWORD)
                            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                        </div>
                        <div class="row">
                            <div class="col-xs-8">
                                <div class="editor-label">
                                   
                                </div>
                            </div>
                            <!-- /.col -->
                            <div class="col-xs-4">
                                <button type="submit" class="btn btn-primary btn-block btn-flat">Login</button>
                            </div>
                           
                            <!-- /.col -->
                        </div>
                    </form>
             


                </fieldset>
              
            }
        </div>
        </div>
        <!-- /.login-box -->
        <!-- jQuery 3 -->
        <script src="~/Content/bower_components/jquery/dist/jquery.min.js"></script>
        <!-- Bootstrap 3.3.7 -->
        <script src="~/Content/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
        <!-- iCheck -->
        <script src="~/Content/plugins/iCheck/icheck.min.js"></script>
        <script>
            $(function () {
                $('input').iCheck({
                    checkboxClass: 'icheckbox_square-blue',
                    radioClass: 'iradio_square-blue',
                    increaseArea: '20%' /* optional */
                });
            });</script>


