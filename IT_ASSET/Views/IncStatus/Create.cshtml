@model IT_ASSET.Models.incident_case

@{
    ViewBag.Title = "Create";
}

<meta http-equiv="x-ua-compatible" content="IE=Edge" />



<h3>ลงทะเบียนสำหรับการแจ้งปัญหาการซ่อม</h3>
<hr/>
<h4> @TempData["INC_CODE"]</h4>

@using (Html.BeginForm("Create", "IncStatus", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.INC_DATE, "วันที่แจ้ง", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-8">
            @Html.EditorFor(model => model.INC_DATE, new { htmlAttributes = new { @class = "form-control", @Value = @DateTime.Now, @readonly = true } })


            @Html.ValidationMessageFor(model => model.INC_DATE, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.INC_TOPIC, "เรื่องที่แจ้ง", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-8">
            @Html.EditorFor(model => model.INC_TOPIC, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.INC_TOPIC, "", new { @class = "text-danger" })
        </div>
    </div>
    @*<div class="form-group">
            @Html.LabelFor(model => model.HW_CODE, "ชื่อเครื่อง", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.HW_CODE, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.HW_CODE, "", new { @class = "text-danger" })
            </div>
        </div>*@
    <div class="form-group">
        @Html.LabelFor(model => model.INC_REQUESTER, "ชื่อผู้แจ้ง", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-8">
            @Html.EditorFor(model => model.INC_REQUESTER, new { htmlAttributes = new { @class = "form-control", @Value = Session["USER_NO"].ToString(), @readonly = "true" } })
            @Html.ValidationMessageFor(model => model.INC_REQUESTER, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.INC_STATUS, "สถานะของงาน", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-8">

            @Html.DropDownListFor(model => model.INC_STATUS, new List<SelectListItem>
  {
      new SelectListItem{ Text="ลงทะเบียน",Value="01"},

  }, new { @class = "form-control", @readonly = "true" })

        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.INC_DESCRIPTION, "รายละเอียดของงาน", htmlAttributes: new { @class = "control-label col-md-2" })

        <div class="col-md-8">
            @Html.TextAreaFor(model => model.INC_DESCRIPTION, htmlAttributes: new { @class = "form-control", @rows = 5, @cols = 30 })
            @Html.ValidationMessageFor(model => model.INC_DESCRIPTION, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="แจ้งปัญหาการซ่อม" class="btn btn-success" onclick="return confirm ('กรุณากด OK เพื่อทำการเปิดงาน ?');" />

        </div>
    </div>

</div>

}
@if (ViewBag.Message != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("@ViewBag.Message");
        };
    </script>
}

<div>
    @Html.ActionLink(" ", "Index", null, new { @class = "btn btn-primary btn-sm glyphicon glyphicon-arrow-left" })

</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}




