@model IT_ASSET.Models.tbl_req_af

@{
    ViewBag.Title = "Edit";
}

<h2>อนุมัติโดยผู้จัดการฝ่าย</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.REQ_STATUS, "สถานะของงาน", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-5">
            @Html.DropDownListFor(model => model.REQ_STATUS, new List<SelectListItem>
  {
      new SelectListItem{ Text="ลงทะเบียน",Value="01"},
      new SelectListItem{ Text= "อนุมัติโดยผู้จัดการฝ่าย",Value = "02"}

  }, new { @class = "form-control" })

            @Html.ValidationMessageFor(model => model.REQ_STATUS, "", new { @class = "text-danger" })
        </div>
    </div>
    <hr />
   
        <div class="form-group">
            @Html.LabelFor(model => model.AF_CODE, "เลขที่เอกสาร", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.AF_CODE, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                @Html.ValidationMessageFor(model => model.AF_CODE, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.USER_NO, "รหัสพนักงานผู้ขอสิทธิ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.USER_NO, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                @Html.ValidationMessageFor(model => model.USER_NO, "", new { @class = "text-danger" })
            </div>
        </div>

    <div class="form-inline">
    <div class="form-group">
        @Html.LabelFor(model => model.AF_APPROVE, "ชื่อผู้อนุมัติ", htmlAttributes: new { @class = "control-label col-md-7" })
        <div class="col-md-5">
            @Html.EditorFor(model => model.AF_APPROVE, new { htmlAttributes = new { @class = "form-control", @Value = Session["USER_NO"].ToString(), @readonly = "true" } })
            @Html.ValidationMessageFor(model => model.AF_APPROVE, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.AF_APPROVE_DATE, "วันที่อนุมัติ", htmlAttributes: new { @class = "control-label col-md-7" })
        <div class="col-md-5">
            @Html.EditorFor(model => model.AF_APPROVE_DATE, new { htmlAttributes = new { @class = "form-control", @Value = @DateTime.Now.ToShortDateString(), @readonly = true } })
            @Html.ValidationMessageFor(model => model.AF_APPROVE_DATE, "", new { @class = "text-danger" })
        </div>
    </div>

</div>
    <br />

    <div class="form-group">
        @Html.LabelFor(model => model.AF_DATE, "วันที่แจ้ง", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-5">
            @Html.EditorFor(model => model.AF_DATE, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
            @Html.ValidationMessageFor(model => model.AF_DATE, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ALLOW_STATUS, "สิทธิการใช้งาน", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-5">
            @Html.EditorFor(model => model.ALLOW_STATUS, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
            @if (Model.ALLOW_STATUS == "01")
            {
                @Html.ValidationMessageFor(model => model.ALLOW_STATUS, "01 = ขอสิทธิ", new { @class = "text-danger" })
            }
            else if (Model.ALLOW_STATUS == "02")
            {
                @Html.ValidationMessageFor(model => model.ALLOW_STATUS, "02 = เพิ่มเติมสิทธิ", new { @class = "text-danger" })
            }
            else if (Model.ALLOW_STATUS == "03")
            {
                @Html.ValidationMessageFor(model => model.ALLOW_STATUS, "03 = ยกเลิกสิทธิ", new { @class = "text-danger" })
            }

        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.AF_STATUS, "สถานะสิทธิ", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-5">
            @Html.EditorFor(model => model.AF_STATUS, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
            @Html.ValidationMessageFor(model => model.AF_STATUS, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.AF_REQUESTER, "ชื่อผู้แจ้ง", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-5">
            @Html.EditorFor(model => model.AF_REQUESTER, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
            @Html.ValidationMessageFor(model => model.AF_REQUESTER, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.AF_SITE, "Site", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-5">
            @Html.EditorFor(model => model.AF_SITE, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
            @Html.ValidationMessageFor(model => model.AF_SITE, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.AF_FOLDER, "Folder", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-5">
            @Html.EditorFor(model => model.AF_FOLDER, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
            @Html.ValidationMessageFor(model => model.AF_FOLDER, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.AF_NOTE, "หมายเหตุ", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-5">
            @Html.EditorFor(model => model.AF_NOTE, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
            @Html.ValidationMessageFor(model => model.AF_NOTE, "", new { @class = "text-danger" })
        </div>
    </div>


    <br />
    <div class="form-group">
        <div class="col-md-offset-5 col-lg-12">
            <input type="submit" value="อนุมัติ" class="btn btn-success" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
