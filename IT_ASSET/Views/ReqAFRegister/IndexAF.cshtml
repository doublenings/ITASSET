@model IPagedList<IT_ASSET.Models.View_req_af_follow>

@using PagedList.Mvc;
@using PagedList;
@{
    ViewBag.Title = "IndexAF";
}

<h2>ติดตามการร้องขอและยกเลิกสิทธิ ALFRESCO</h2>
<div class="col-md-12 pull-left" style="font-size:16px;color:red;">
    <input type="button" class="btn  btn-warning" value="Report" onclick="location.href='@Url.Action("Report", "ReqAFRegister")'" />
    <div class="pull-right col-md-12 col-md-6">
        <form class="pull-right" role="search">
            <div class="input-group pull-right">
                @Html.TextBox("Search", null, new { @class = "form-control", @placeholder = "เลขที่เอกสาร/รหัสพนักงานผู้ขอสิทธิ/รหัสพนักงานผู้แจ้ง"  })
                <div class="input-group-btn">
                    <button class="btn btn-default pull-right" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                </div>
            </div>
        </form>
    </div>
</div>
<br />
<table class="table table-bordered table-hover text-nowrap">
    <thead class="headTable" style="background-color:#50575D; color:white">
        <tr>
            <th>
                เลขที่เอกสาร
            </th>
            <th>
                รหัสพนักงานของผู้ขอสิทธิ
            </th>
            <th>
                ชื่อ-สกุลของผู้ขอสิทธิ
            </th>
            <th>วันที่แจ้ง</th>

            <th>
                สิทธิการใช้งาน
            </th>
            <th>
                Site
            </th>
            <th>
                Folder
            </th>
            <th>
                สถานะสิทธิ
            </th>
            <th>
                หมายเหตุ
            </th>

            <th>
                ชื่อผู้แจ้ง
            </th>
            <th>
                ชื่อ-สกุลของผู้อนุมัติจากเจ้าของเอกสาร
            </th>
            <th>
                วันที่ของผู้อนุมัติจากเจ้าของเอกสาร
            </th>
            <th>
                สถานะของงาน
            </th>
            <th>
                ชื่อ-สกุลผู้อนุมัติ (ผู้จัดการฝ่ายขึ้นไป)
            </th>
            <th>
                วันทีีอนุมัติ (ผู้จัดการฝ่ายขึ้นไป)
            </th>
            <th>
                ชื่อ-สกุลผู้เปิดงาน(ส่วนไอที)
            </th>
            <th>
                วันที่เปิดงาน(ส่วนไอที)
            </th>
            <th>
                ชื่อ-สกุลผู้รับงาน(ส่วนไอที)
            </th>

            <th>
                วันที่รับงาน(ส่วนไอที)
            </th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a href="@Url.Action("Details_AF", "ReqAFRegister", new { id = item.AF_CODE })" style="color:black;">  @Html.DisplayFor(modelItem => item.AF_CODE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.USER_NO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.USER_NAME)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AF_DATE)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.ALLOW_DESC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AF_SITE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AF_FOLDER)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AF_STATUS_NAME)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.AF_NOTE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NAME_REQUESTER)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OWNER_NAME)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AF_APPROVE_OWNER_DATE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.STA_DESC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.APPROVE_NAME)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AF_APPROVE_DATE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IT_NAME)
                @Html.DisplayFor(modelItem => item.IT_SURNAME)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AF_OPEN_DATE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AF_ASSIGN_TO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ASSIGN_NAME)
                @Html.DisplayFor(modelItem => item.ASSIGN_SURNAME)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.AF_ASSIGN_DATE)
            </td>



        </tr>
    }

</table>
@Html.PagedListPager(Model, i => Url.Action("IndexAF", "ReqAFRegister", new { i }))
