@model IEnumerable<IT_ASSET.Models.View_req_af_register>

@{
    ViewBag.Title = "Index";
}

    <h2>แบบฟอร์มการขอสิทธิและยกเลิกสิทธิ ALFRESCO</h2>

<table class="table table-bordered table-hover text-nowrap">
    <thead class="headTable" style="background-color:#50575D; color:white">
        <tr>
            <th>เลขที่เอกสาร</th>
            <th>รหัสผุ้ขอสิทธิ</th>
            <th>ชื่อผุ้ขอสิทธิ</th>
            <th>รหัสผู้ขอสิทธิ</th>
            <th>ชื่อผู้แจ้ง</th>
            <th>วันที่แจ้ง</th>
            <th>สิทธิการใช้งาน</th>
            <th>ผู้ของสิทธิ</th>

            <th>Site</th>
            <th>Folder</th>
            <th>สถานะสิทธิ</th>
            <th>สถานะของงาน</th>
            <th>อนุมัติ</th>
        </tr>
        </thead>
        @foreach (var item in Model)
        {
<tr>
    <td>
       @Html.DisplayFor(modelItem => item.AF_CODE)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.MEM_NO)
    </td>
    <td>@Html.DisplayFor(modelItem => item.MEM_NAME)</td>
    <td>@Html.DisplayFor(modelItem => item.AF_REQUESTER)</td>
    <td>
        @Html.DisplayFor(modelItem => item.USER_NAME)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.AF_DATE)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ALLOW_DESC)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.APPLICANT_DESC)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.AF_SITE)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.AF_FOLDER)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.AF_STATUS_NAME)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.STA_DESC)
    </td>
   @if(Session["USER_ROLE"].ToString() == "USER_OWNER")
   {
<td>@Html.ActionLink(" ", "Edit", new { id = item.AF_CODE }, new { @class = "btn-success btn-sm fa fa-check", @style = "color:white;" })</td>
   }
</tr>
        }

</table>
