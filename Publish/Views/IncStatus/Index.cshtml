@model IPagedList<IT_ASSET.Models.View_inc_status>
@using PagedList.Mvc;
@using PagedList;

<h2>ลงทะเบียนสำหรับแจ้งปัญหา</h2>
@using (Html.BeginForm("Index", "IncStatus"))
{
<div class="col-md-12 pull-left" style="font-size:16px;color:red;">
    @Html.ActionLink(" ", "Create", null, new { @class = "btn btn-danger btn-sm glyphicon glyphicon-plus" })
    แจ้งปัญหา
    <div class="pull-right col-md-12 col-md-4">
        <form class="pull-right" role="search">
            <div class="input-group pull-right">
                @Html.TextBox("Search", null, new { @class = "form-control", @placeholder = "Search..." })
                <div class="input-group-btn">
                    <button class="btn btn-default pull-right" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                </div>
            </div>
        </form>
    </div>
</div>
<br />
}

<br/>

<table class="table table-bordered table-hover text-nowrap">
    <thead class="headTable" style="background-color:#50575D; color:white">
        <tr>
            <th>เลขที่ใบแจ้ง</th>
            <th>
                หัวข้อการแจ้ง
            </th>
            <th>
                ชื่อผู้แจ้ง
            </th>
            <th>
                วันที่แจ้ง
            </th>
            <th>
                สถานะของงาน
            </th>
            <th>
                รายละเอียดของงาน
            </th>
        </tr>
    </thead>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="3"> Records not found </td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.INC_CODE)</td>
                <td>
                    @Html.DisplayFor(modelItem => item.INC_TOPIC)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.USER_NAME)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.INC_DATE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.STA_DESCRIPTION)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.INC_DESCRIPTION)
                </td>


            </tr>
        }
    }
</table>
@Html.PagedListPager(Model, i => Url.Action("Index", "IncStatus", new { i }))
